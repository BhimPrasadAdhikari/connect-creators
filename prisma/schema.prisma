// Prisma schema for Micro-Influencer Marketplace MVP
// Uses Supabase PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  FAN
  CREATOR
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  PENDING
}

enum PaymentProvider {
  STRIPE
  RAZORPAY
  ESEWA
  KHALTI
  BANK_TRANSFER
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  emailVerified   DateTime?
  name            String?
  image           String?
  password        String?
  role            Role      @default(FAN)
  securityVersion Int       @default(1) // Incremented on password change to invalidate sessions
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  creatorProfile CreatorProfile?
  subscriptions  Subscription[]
  comments       Comment[]
  payments       Payment[]
  accounts       Account[]
  sessions       Session[]
  tipsGiven      Tip[]             @relation("TipsGiven")
  conversations  Conversation[]
  messages       Message[]
  purchases      Purchase[]
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CreatorProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  username    String   @unique
  displayName String?
  bio         String?  @db.Text
  coverImage  String?
  socialLinks Json?
  isVerified  Boolean  @default(false)
  // Paid DM settings
  dmPrice     Int?     // Price per message in paise (null = free)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  tiers           SubscriptionTier[]
  posts           Post[]
  subscriptions   Subscription[]
  tipsReceived    Tip[]              @relation("TipsReceived")
  digitalProducts DigitalProduct[]
  conversations   Conversation[]
}

model SubscriptionTier {
  id          String   @id @default(cuid())
  creatorId   String
  name        String
  description String?  @db.Text
  price       Int      // Price in paise/cents (99 INR = 9900)
  currency    String   @default("INR")
  benefits    String[] // List of benefits
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  creator       CreatorProfile @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  subscriptions Subscription[]
  posts         Post[]         @relation("TierRequiredPosts")
}

model Subscription {
  id        String             @id @default(cuid())
  fanId     String
  tierId    String
  creatorId String
  status    SubscriptionStatus @default(PENDING)
  startDate DateTime           @default(now())
  endDate   DateTime?
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  // Relations
  fan     User             @relation(fields: [fanId], references: [id], onDelete: Cascade)
  tier    SubscriptionTier @relation(fields: [tierId], references: [id], onDelete: Cascade)
  creator CreatorProfile   @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  payment Payment?

  @@unique([fanId, tierId])
}

model Post {
  id             String   @id @default(cuid())
  creatorId      String
  title          String
  content        String   @db.Text
  mediaUrl       String?
  mediaType      String?  // image, video, audio
  isPaid         Boolean  @default(false)
  requiredTierId String?
  // PPV (Pay-Per-View) fields
  isPPV          Boolean  @default(false)
  ppvPrice       Int?     // One-time purchase price in paise
  isPublished    Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  creator      CreatorProfile    @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  requiredTier SubscriptionTier? @relation("TierRequiredPosts", fields: [requiredTierId], references: [id])
  comments     Comment[]
  tips         Tip[]
  purchases    Purchase[]        @relation("PostPurchases")
}

model DigitalProduct {
  id          String   @id @default(cuid())
  creatorId   String
  title       String
  description String?  @db.Text
  price       Int      // Price in paise
  currency    String   @default("INR")
  fileUrl     String   // URL to downloadable file
  fileType    String?  // pdf, zip, audio, video, etc.
  thumbnailUrl String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  creator   CreatorProfile @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  purchases Purchase[]     @relation("ProductPurchases")
}

model Conversation {
  id           String   @id @default(cuid())
  creatorId    String
  fanId        String
  lastMessage  String?
  lastMessageAt DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  creator  CreatorProfile @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  fan      User           @relation(fields: [fanId], references: [id], onDelete: Cascade)
  messages Message[]

  @@unique([creatorId, fanId])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  senderId       String
  content        String   @db.Text
  isPaid         Boolean  @default(false)
  price          Int?     // Price in paise for paid messages
  isRead         Boolean  @default(false)
  createdAt      DateTime @default(now())

  // Relations
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)
}

model Purchase {
  id            String   @id @default(cuid())
  userId        String
  postId        String?
  productId     String?
  amount        Int
  currency      String   @default("INR")
  status        String   @default("COMPLETED") // PENDING, COMPLETED, REFUNDED
  createdAt     DateTime @default(now())

  // Relations
  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  post    Post?           @relation("PostPurchases", fields: [postId], references: [id])
  product DigitalProduct? @relation("ProductPurchases", fields: [productId], references: [id])
}

model Comment {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Payment {
  id              String          @id @default(cuid())
  userId          String
  subscriptionId  String?         @unique
  amount          Int             // Amount in paise/cents
  currency        String          @default("INR")
  provider        PaymentProvider
  providerOrderId String?
  providerPayId   String?
  status          PaymentStatus   @default(PENDING)
  platformFee     Int             @default(0)
  creatorEarnings Int             @default(0)
  metadata        Json?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription Subscription? @relation(fields: [subscriptionId], references: [id])
}

model Tip {
  id        String   @id @default(cuid())
  fromUserId String
  toCreatorId String
  postId     String?
  amount     Int      // Amount in paise/cents
  currency   String   @default("INR")
  message    String?
  createdAt  DateTime @default(now())

  // Relations
  fromUser  User           @relation("TipsGiven", fields: [fromUserId], references: [id], onDelete: Cascade)
  toCreator CreatorProfile @relation("TipsReceived", fields: [toCreatorId], references: [id], onDelete: Cascade)
  post      Post?          @relation(fields: [postId], references: [id])
}

// Security: Audit Logging
model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String   // LOGIN, LOGOUT, PASSWORD_CHANGE, PAYMENT, SETTINGS_UPDATE, etc.
  resource   String?  // user, payment, subscription, post, etc.
  resourceId String?
  ipAddress  String?
  userAgent  String?
  metadata   Json?
  status     String   @default("SUCCESS") // SUCCESS, FAILURE, BLOCKED
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

// Security: Webhook Idempotency
model WebhookEvent {
  id          String   @id @default(cuid())
  providerId  String   // Provider's event ID
  provider    String   // stripe, razorpay
  eventType   String
  payload     Json?
  createdAt   DateTime @default(now())
  processedAt DateTime @default(now())

  @@unique([providerId, provider])
  @@index([createdAt])
}

